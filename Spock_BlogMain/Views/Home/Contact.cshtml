@model Spock_BlogMain.Models.EmailModel
    <style>
     .backgd {
            background-color:  #b30000;
        }

</style>
<!-- Page Header -->
<header class="smallhead" style="background-image: url('/img/siru_banner_small.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">
                    <br />
                    <h1 style="color:#b30000">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Srijana's Blog</h1>
                    @*<h2 class="subheading">Problems look mighty small from 150 miles up</h2>
                        <span class="meta">
                            Posted by
                            <a href="#">Start Bootstrap</a>
                            on August 24, 2019
                        </span>*@
                </div>
            </div>
        </div>
    </div>
</header>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-8">
            <h4>Send me a message</h4>
        </div>
        <div class="col-md-2">
        </div>
    </div>
    <hr />

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-10">

            <div class=" form-group">
                @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FromName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", placeholder = "" })
                    @Html.ValidationMessageFor(m => m.FromEmail)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "" })
                    @Html.ValidationMessageFor(m => m.Subject)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Body, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.Body, new { @class = "form-control", placeholder = "" })
                    @Html.ValidationMessageFor(m => m.Body)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <input type="submit" class="btn btn-default backgd" value="Send" />
                </div>
            </div>
        </div>
    </div>

}
@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

    @*tinyMVC Editor*@

    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
    <script type="text/javascript">
        $(function () {
            tinymce.init({
                selector: '#Body'
            });
        });
    </script>
}
